<!-- 顶部固定区域 -->
<view class="top-area">
  <view class="row" bindtap="tapAllTasks">
    <image class="icon" src="../../icons/allList_icon.png" mode="widthFix"></image>
    <view class="list_name">全部事项</view>
    <view class="task_amount">{{totalTasks_amount}}</view>
  </view>

  <view class="row" bindtap="tapMyToday">
    <image class="icon" src="../../icons/today_icon.png" mode="widthFix"></image>
    <view class="list_name">我的一天</view>
    <view class="task_amount">{{todayTasks_amount}}</view>
  </view>

  <view class="row" bindtap="tapCreatList">
    <image class="icon" src="../../icons/creat_list.png" mode="widthFix"></image>
    <view class="list_name">创建清单</view>
  </view>

  <view class="row" bindtap="tapJoinList">
    <image class="icon" src="../../icons/join.png" mode="widthFix"></image>
    <view class="list_name">加入清单</view>
  </view>
</view>


<!-- 自己创建的清单 -->
<l-collapse expand-item-id="{{[0]}}" class="l-collapse" id="1" bind:linexpand="expand_collapse"
  bind:linfold="fold_collapse">
  <l-collapse-item customTitle="{{true}}">
    <view class="collapse-rowTitle" slot="title">
      <view class="title_show">我的清单</view>
      <view class="list_amount">{{myLists_amount}}</view>
      <image wx:if="{{!isExpand_collapse_1}}" class="collapse-icon" src="../../icons/left.png" mode="widthFix"></image>
      <image wx:if="{{isExpand_collapse_1}}" class="collapse-icon" src="../../icons/down.png" mode="widthFix"></image>
    </view>

    <view class="list_area">
      <block wx:for="{{self_lists}}" wx:key="index">
        <view class="row" bindtap="tapMyLists" id="{{index}}">
          <image class="icon" src="../../icons/list_icon.png" mode="widthFix"></image>
          <view class="list_name">{{item.name}}</view>
          <view class="task_amount">{{item.amount}}</view>
        </view>
      </block>
    </view>
  </l-collapse-item>
</l-collapse>

<!-- 加入的清单 -->
<l-collapse expand-item-id="{{[0]}}" class="l-collapse" id="2" bind:linexpand="expand_collapse"
  bind:linfold="fold_collapse">
  <l-collapse-item customTitle="{{true}}">
    <view class="collapse-rowTitle" slot="title">
      <view class="title_show">我的加入</view>
      <view class="list_amount">{{myLists_amount}}</view>
      <image wx:if="{{!isExpand_collapse_2}}" class="collapse-icon" src="../../icons/left.png" mode="widthFix"></image>
      <image wx:if="{{isExpand_collapse_2}}" class="collapse-icon" src="../../icons/down.png" mode="widthFix"></image>
    </view>

    <view class="list_area">
      <block wx:for="{{self_lists}}" wx:key="index">
        <view class="row" bindtap="tapMyJoinLists" id="{{index}}">
          <image class="icon" src="../../icons/list_icon2.png" mode="widthFix"></image>
          <view class="list_name">{{item.name}}</view>
          <view class="task_amount">{{item.amount}}</view>
        </view>
      </block>
    </view>
  </l-collapse-item>
</l-collapse>


