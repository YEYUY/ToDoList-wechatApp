<l-popup show="{{isShowCreatPop}}" content-align="bottom" bind:lintap="tapBackground">
  <view class="creatPop" wx:if="{{isShowCreatPop}}">
    <view class="cP-topRow">
      <view class="cP-cancel" bindtap="pop_cancel">取消</view>
      <view class="cP-titleName">创建清单</view>
      <view class="cP-confirm" style="color:{{isListName?'#5478c7':'#bfbfbf'}}" bindtap="pop_confirm">确定</view>
    </view>
    <view class="cP-inputRow">
      <image src="../../icons/list_icon_creat.png" mode="widthFix" class="cP-list_icon"></image>
      <input type="text" placeholder="名称" focus="{{true}}"  hold-keyboard="{{true}}" adjust-position="{{false}}"
        bindinput="input_listName" />
    </view>
  </view>
</l-popup>