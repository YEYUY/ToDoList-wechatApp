page{
  background-color: #F5F5F5;
}

.top-area{
  background-color: white;
  width: 100%;
  height: 250rpx;
  margin-bottom: 20rpx;
  /* border-radius: 30rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  margin-left: 30rpx;
}

.name{
  width: 420rpx;
  margin-left: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.rightIcon{
  width: 46rpx;
  height: 46rpx;
  margin-left: 80rpx;
}

.midArea{
  width: 690rpx;
  margin-top: 6rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
}

.mA-leftArea{
  height: 114rpx;
  padding: 20rpx;
  width: 320rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.mA-rightArea{
  width: 340rpx;
  height: 114rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 20rpx;
}

.mAl-topText{
  font-size: 32rpx;
}

.mAl-amount{
  margin-top: 16rpx;
  font-size: 42rpx;
  font-weight: bold;
}

.commonRow{
  display: flex;
  flex-direction: row;
  background-color: white;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #F5F5F5;
}

.cR-icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.cR-text{
  width: 500rpx;
}

.commonRowLast{
  margin-top: 26rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #F5F5F5;
}