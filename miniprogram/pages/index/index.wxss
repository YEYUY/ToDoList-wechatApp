page {
  background-color: white;
}

.top-Area {
  margin-left: 26rpx;
}

.tA-title {
  font-size: 40rpx;
  font-weight: bold;
}

.tA-date {
  margin-top: 14rpx;
  font-size: 32rpx;
}

.task-Area {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}



.tA-row {
  padding: 12rpx 0rpx 18rpx 30rpx;
  display: flex;
  flex-direction: row;
}

.tA-row-icon {
  width: 50rpx;
  height: 40rpx;
  margin-right: 0rpx;
}

.tA-row-bottom {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #8a8a8a;
}

.tA-row-rightArea{
  padding-left: 0rpx;
}

.tA-row-date {
  width: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tA-row-endDate {
  margin-left: 6rpx;
}

.tA-row-endWeek {
  margin-left: 6rpx;
}

.tA-row-listName {
  width: 330rpx;
  margin-left: 10rpx;
  text-align: right;
  color: #868686;
}


.tA-row-delete {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #d81e06;
}



.fixedBottom {
  position: fixed;
  bottom: 0rpx;
  height: 120rpx;
  width: 100%;
  background-color: white;
}

.fB-area {
  margin: 10rpx 20rpx 10rpx 20rpx;
  height: 100rpx;
  background-color: #4270d4;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: white;
}

.add_icon {
  margin-left: 30rpx;
  margin-right: 26rpx;
  width: 38rpx;
  height: 38rpx;
}

.pp-Area {
  height: 134rpx;
  /* width: 750rpx; */
  padding: 30rpx 10rpx 0 30rpx;
  border-top-left-radius:30rpx;
  border-top-right-radius: 30rpx;
  background-color: white;
}

.pA-topRow {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
}

.pA-topRow-icon {
  width: 48rpx;
  margin-right: 10rpx;
}

.pA-input{
  width: 100%;
}

.pA-bottomRow {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.pA-bottomRow-left
{
  display: flex;
  flex-direction: row;
  width: 650rpx;
}

.pA-bottomRow-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.pA-bottom-icon {
  margin-right: 6rpx;
  width: 44rpx;
}

.pA-bottom-submitIcon {
  width: 44rpx;
}


/* 日历 */

.popup{
  height: 740rpx;
  width: 660rpx;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pp-calendar{
  margin-top: 20rpx;
  height: 600rpx;
  width: 600rpx;
}

.pp-row{
  background-color: white;
  display: flex;
  flex-direction: row;
  height: 140rpx;
  align-items: center;
}


.pp-cancel{
  margin-right: 200rpx;
}