page {
  background-color: white;
}

.top-area {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  margin: 10rpx 30rpx 0rpx 40rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e0e0e0;
  align-items: center;
  font-size: 38rpx;
}

.top-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.finished-title{
  color: #8a8a8a;
  text-decoration:line-through;
}


.mid-area {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx 0rpx 30rpx;
  padding-bottom: 14rpx;
  padding-top: 14rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.mid-area-row {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  align-items: center;
}

.baoguoIcon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.mid-area-row_file {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  margin-left: 80rpx;
  align-items: center;

}

.mid-area-row_picture {
  margin-left: 80rpx;
}

.file-text {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.mid-icon {
  width: 40rpx;
  height: 40rpx;
}

.bottom-area {
  margin: 10rpx 30rpx 0rpx 30rpx;
  padding-top: 14rpx;
  padding-bottom: 20rpx;
  height: 300rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.fixed-area {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  height: 60rpx;
  padding-bottom: 10rpx;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background-color: white;
}

.fixed-area-text {
  margin-left: 225rpx;
  width: 300rpx;
  text-align: center;
  color: #868686;
}

.fixed-area-icon {
  margin-left: 150rpx;
  width: 50rpx;
  height: 50rpx;
}

.popup {
  height: 740rpx;
  width: 660rpx;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pp-calendar {
  margin-top: 20rpx;
  min-height: 600rpx;
  max-height: 600rpx;
  width: 600rpx;
}

.pp-row {
  background-color: white;
  display: flex;
  flex-direction: row;
  height: 140rpx;
  align-items: center;
}


.pp-cancel {
  margin-right: 200rpx;
}