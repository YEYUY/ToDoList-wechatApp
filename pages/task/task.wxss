/* pages/task.wxss */
.containert{
  padding: 10rpx 0;
  box-sizing: border-box;
  height: 100vh;
  width: 100%;
  background-image: url("http://m.qpic.cn/psc?/V50yJ2q22oR1YT3uoyRS1JxPwJ3Q3Y82/ruAMsa53pVQWN7FLK88i5o8aehP4nV9oB2xllGreFXjDna6K**W.u9H8MeWtgpfnESaSCos7YYVDxxgeZKiZ25sia*UoWGw8hFdf8g17HAM!/mnull&bo=oAU4BAAAAAABB7k!&rf=photolist&t=5");
  background-size:100% 100%;
  background-position: center;
}
.overlay {
  position: absolute; /* 使用绝对定位 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(255, 255, 255, 0.6); /* 白色蒙版，透明度 50% */
}
.all{
  z-index: 2;
  position: relative;
}
.row {
  margin: 50rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #2c2c2c;
}
.row .row-leftpart {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row .row-leftpart image {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
}
.row .row-rightpart {
  color: #8a8a8a;
}
.last-row {
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #ececec;
}
.collapse {
  margin: 0rpx 30rpx 40rpx 30rpx;
  font-size: 32rpx;
}
.moreset{
  display: flex;
  flex-direction: column;
  height: 90vh;
  width: 700rpx;
  margin: 20rpx;
  border-radius: 10px;
  background-color: #DAD0C4;
  box-shadow: 3rpx 4rpx 6rpx rgba(0,0,0,0.2);
  overflow-y: scroll;
}
.unfinish{
  display: flex;
  align-items: center;
  margin-block-start: 20rpx;
  flex-direction: column;
  height: 700rpx;
  overflow-y: scroll;
}
.mblog{
  display: flex;
  align-items: center;
  margin-block-start: 20rpx;
  flex-direction: column;
  height: 900rpx;
  overflow-y: scroll;
}
.finished_item{
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 700rpx;
  overflow-y: scroll;
}
.finish{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #7FAFC3;
  border-radius: 10px;
  color: #ffffff;
  margin-top: 20rpx;
  box-shadow: 3rpx 4rpx 6rpx rgba(0,0,0,0.2);
  width: 700rpx;
  height: 100rpx;
  font-size: 30rpx;
  z-index: 2;
  position:relative;
}
.finish:active{
  background-color: #6290a3;
  box-shadow: 6rpx 8rpx 10rpx rgba(0,0,0,0.3);
  z-index: 2;
  position:relative;
}
.blogitems{
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
@import 'task-wxa-auto-dark.wxss'