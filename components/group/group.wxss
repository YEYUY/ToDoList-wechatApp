/* components/group/group.wxss */
.moreset{
  display: flex;
  flex-direction: column;
  height: 95vh;
  width: 700rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #f1ede7;
  box-shadow: 3rpx 4rpx 6rpx rgba(0,0,0,0.2);
}
.finishbtn{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #7FAFC3;
  border-radius: 10px;
  color: #ffffff;
  box-shadow: 3rpx 4rpx 6rpx rgba(0,0,0,0.2);
  width: 700rpx;
  height: 100rpx;
  font-size: 30rpx;
  z-index: 2;
  position:relative;
}
.finishbtn:active{
  background-color: #6290a3;
  box-shadow: 6rpx 8rpx 10rpx rgba(0,0,0,0.3);
  z-index: 2;
  position:relative;
}
.day{
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 700rpx;
  border-radius: 20rpx;
  box-shadow: 3rpx 4rpx 6rpx rgba(0, 0,0, 0.3);
}
.unfinish{
  display: flex;
  align-items: center;
  margin-block-start: 20rpx;
  flex-direction: column;
  height: 500rpx;
  overflow-y: scroll;
}
.finished_item{
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 400rpx;
  overflow-y: scroll;
}